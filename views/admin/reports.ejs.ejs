<% layout('layout') %><h1>Báo cáo lãi/lỗ (<%= range %>)</h1><nav class='tabs'><a href='/admin/reports' class='<%= range==='daily'?'active':'' %>'>Ngày</a><a href='/admin/reports?range=weekly' class='<%= range==='weekly'?'active':'' %>'>Tuần</a><a href='/admin/reports?range=monthly' class='<%= range==='monthly'?'active':'' %>'>Tháng</a><a href='/admin/reports?range=yearly' class='<%= range==='yearly'?'active':'' %>'>Năm</a></nav><div class='row' style='margin:.8rem 0; gap:.5rem;'><a class='btn outline' href='/admin/reports.csv?range=<%= range %>'>Tải CSV</a><a class='btn outline' href='/admin/reports.xlsx?range=<%= range %>'>Tải Excel</a></div><table class='table'><tr><th>Kỳ</th><th>Số đơn</th><th>Doanh thu</th><th>Lãi gộp</th><th>Lãi ròng</th></tr><% rows.forEach(r=>{ %><tr><td><%= r.period %></td><td><%= r.orders %></td><td><%= (r.revenue||0).toLocaleString() %> đ</td><td><%= (r.gross_profit||0).toLocaleString() %> đ</td><td><%= (r.net_profit||0).toLocaleString() %> đ</td></tr><% }) %></table>