{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],
    "incremental": true,
    "types": ["node"],

    "baseUrl": ".",               // ðŸ‘ˆ thÃªm dÃ²ng nÃ y
    "paths": { "@/*": ["./*"] }   // ðŸ‘ˆ vÃ  dÃ²ng nÃ y
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
