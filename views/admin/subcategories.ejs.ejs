<% layout('layout') %><h1>Nhóm nhỏ (Subcategories)</h1><div data-subs='<%- encodeURIComponent(JSON.stringify(subs.map(s=>({id:s.id,name:s.name,category_id:s.category_id})))) %>'></div><form method='post' action='/admin/subcategories/add' class='inline'><select name='category_id'><% cats.forEach(c=>{ %><option value='<%= c.id %>'><%= c.name %></option><% }) %></select><input name='name' placeholder='Tên nhóm nhỏ' required><button class='btn'>Thêm</button></form><table class='table'><tr><th>ID</th><th>Danh mục</th><th>Tên</th><th></th></tr><% subs.forEach(s=>{ %><tr><td><%= s.id %></td><td><%= s.category_name %></td><td><form method='post' action='/admin/subcategories/update' class='inline'><input type='hidden' name='id' value='<%= s.id %>'><select name='category_id'><% cats.forEach(c=>{ %><option value='<%= c.id %>' <%= c.id===s.category_id?'selected':'' %>><%= c.name %></option><% }) %></select><input name='name' value='<%= s.name %>'><button class='btn small'>Lưu</button></form></td><td><form method='post' action='/admin/subcategories/delete' onsubmit='return confirm("Xóa nhóm nhỏ?")'><input type='hidden' name='id' value='<%= s.id %>'><button class='btn danger small'>Xóa</button></form></td></tr><% }) %></table>