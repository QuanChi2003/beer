<% layout('layout') %><h1>Đơn hàng</h1><table class='table'><tr><th>ID</th><th>Ngày</th><th>Loại</th><th>Thông tin</th><th>Tổng</th><th>Lãi gộp</th><th>Trạng thái</th><th>Phí ship (chi phí)</th><th>Chi phí khác</th><th>Thao tác</th></tr><% orders.forEach(o=>{ %><tr><td>#<%= o.id %></td><td><%= moment(o.created_at).format('DD/MM/YYYY HH:mm') %></td><td><%= o.order_type %></td><td><% if (o.order_type==='dine-in') { %>Bàn: <%= o.table_number %><% } else { %><div><b><%= o.delivery_name %></b>, <%= o.delivery_phone %></div><div><%= o.delivery_address %></div><% } %></td><td><%= (o.total||0).toLocaleString() %> đ</td><td><%= (o.profit||0).toLocaleString() %> đ</td><td><%= o.status %></td><td><form method='post' action='/admin/orders/update'><input type='hidden' name='id' value='<%= o.id %>'><select name='status'><option value='pending' <%= o.status==='pending'?'selected':'' %>>pending</option><option value='confirmed' <%= o.status==='confirmed'?'selected':'' %>>confirmed</option><option value='preparing' <%= o.status==='preparing'?'selected':'' %>>preparing</option><option value='ready' <%= o.status==='ready'?'selected':'' %>>ready</option><option value='completed' <%= o.status==='completed'?'selected':'' %>>completed</option><option value='cancelled' <%= o.status==='cancelled'?'selected':'' %>>cancelled</option></select></td><td><input type='number' name='shipping_cost' value='<%= o.shipping_cost || 0 %>' style='width:110px'></td><td><input type='number' name='extra_cost' value='<%= o.extra_cost || 0 %>' style='width:110px'></td><td><button class='btn small'>Lưu</button></form></td></tr><% }) %></table>